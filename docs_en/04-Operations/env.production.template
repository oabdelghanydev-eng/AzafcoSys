# Production Environment Template
# Copy this file to .env on production server

APP_NAME="Inventory System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Africa/Cairo
APP_URL=https://api.yoursite.com

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=warning
LOG_DEPRECATIONS_CHANNEL=null

# Database (Hostinger)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=u123456789_inventory
DB_USERNAME=u123456789_user
DB_PASSWORD=CHANGE_ME

# Session & Cache
BROADCAST_CONNECTION=log
CACHE_STORE=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_DOMAIN=.yoursite.com

# Sanctum (SPA Authentication)
SANCTUM_STATEFUL_DOMAINS=app.yoursite.com
SESSION_SECURE_COOKIE=true

# Frontend URL
FRONTEND_URL=https://app.yoursite.com

# CORS (Production - only allow your domain)
CORS_ALLOWED_ORIGINS=https://app.yoursite.com

# Mail (Hostinger SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=465
MAIL_USERNAME=noreply@yoursite.com
MAIL_PASSWORD=CHANGE_ME
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=noreply@yoursite.com
MAIL_FROM_NAME="${APP_NAME}"

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://api.yoursite.com/api/auth/google/callback

# Gemini AI (Optional)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash
