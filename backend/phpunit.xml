<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         executionOrder="random"
         beStrictAboutOutputDuringTests="true"
         failOnRisky="true"
         failOnWarning="true"
>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>

    <!-- Code Coverage Configuration -->
    <source>
        <include>
            <directory suffix=".php">app</directory>
        </include>
        <exclude>
            <!-- Exclude Exceptions -->
            <directory>app/Exceptions</directory>
            <!-- Exclude Helpers -->
            <directory>app/Helpers</directory>
            <!-- Exclude Providers (mostly boilerplate) -->
            <file>app/Providers/AppServiceProvider.php</file>
        </exclude>
    </source>

    <!-- Coverage Reporting -->
    <coverage
        includeUncoveredFiles="true"
        pathCoverage="false"
        ignoreDeprecatedCodeUnits="true"
        disableCodeCoverageIgnore="false"
    >
        <report>
            <!-- HTML Report for local viewing -->
            <html outputDirectory="coverage-report" lowUpperBound="50" highLowerBound="80"/>
            
            <!-- Cobertura for CI/CD integration -->
            <cobertura outputFile="coverage-report/cobertura.xml"/>
            
            <!-- Text output to console -->
            <text outputFile="php://stdout" showUncoveredFiles="false" showOnlySummary="true"/>
        </report>
    </coverage>

    <php>
        <!-- Environment -->
        <env name="APP_ENV" value="testing"/>
        <env name="APP_KEY" value="base64:eS+cNBST2ik2ZB+j2d6Mohg4VJ79g1Gb9OxT50BFT4o="/>
        <env name="APP_MAINTENANCE_DRIVER" value="file"/>
        
        <!-- Performance optimizations for testing -->
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="HASH_DRIVER" value="bcrypt"/>
        
        <!-- Disable unnecessary features -->
        <env name="BROADCAST_CONNECTION" value="null"/>
        <env name="CACHE_STORE" value="array"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="NIGHTWATCH_ENABLED" value="false"/>
        
        <!-- Database for testing -->
        <env name="DB_CONNECTION" value="mysql"/>
        <env name="DB_DATABASE" value="azafco_test"/>
        
        <!-- Optional: Use SQLite for faster tests -->
        <!-- <env name="DB_CONNECTION" value="sqlite"/> -->
        <!-- <env name="DB_DATABASE" value=":memory:"/> -->
    </php>
</phpunit>
